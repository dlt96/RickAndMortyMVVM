<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
            android:layout_marginTop="30dp"
            android:id="@+id/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:transitionName="card"
            android:background="@drawable/list_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_character"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="4dp"
            android:src="@mipmap/ic_launcher_round"
            android:transitionName="characterImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:textColor="@color/textColor"
            tools:text="Rick Sanchez"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_name"
            android:textSize="22sp"
            android:layout_marginStart="8dp"
            android:transitionName="characterName"
            app:layout_constraintTop_toTopOf="@id/iv_character"
            app:layout_constraintBottom_toBottomOf="@id/iv_character"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_character"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toEndOf="@id/tv_detail_name"
            app:layout_constraintStart_toStartOf="@id/tv_detail_name"
            app:layout_constraintBottom_toTopOf="@+id/tv_detail_name"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
    />
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
            app:layout_constraintEnd_toEndOf="@id/tv_detail_name"
            app:layout_constraintStart_toStartOf="@id/tv_detail_name"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <Button
            app:layout_constraintVertical_bias="0.2"
            android:id="@+id/b_contact"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:text="@string/get_in_touch_button_label"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintEnd_toEndOf="@+id/card"
            android:drawableEnd="@android:drawable/sym_action_chat"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/textColor"
            tools:text="Planet: \nEarth"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_planet"
            android:textSize="22sp"
            android:padding="30dp"
            android:layout_margin="20dp"
            android:transitionName="characterName"
            app:layout_constraintTop_toBottomOf="@+id/iv_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:textColor="@color/textColor"
            tools:text="Specie:\nHuman"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_type"
            android:textSize="22sp"
            android:paddingBottom="50dp"
            android:paddingTop="30dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_margin="20dp"
            android:transitionName="characterName"
            app:layout_constraintTop_toBottomOf="@id/tv_planet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>